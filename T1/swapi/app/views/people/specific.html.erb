<table>  
  <tbody>
    <p>Name: <%= @person["name"] %></p>
    <p>Height: <%= @person["height"] %></p>
    <p>Mass: <%= @person["mass"] %></p>
    <p>Hair color: <%= @person["hair_color"] %></p>
    <p>Skin color: <%= @person["skin_color"] %></p>
    <p>Eye color: <%= @person["eye_color"] %></p>
    <p>Birth year: <%= @person["birth_year"] %></p>
    <p>Gender: <%= @person["gender"] %></p>
    <p>Homeworld: <%= link_to @person["homeworld"]["name"], planet_specific_path(url: @person["homeworld"]["url"])%></p>
    <p>Films:</p>
    <% @person["films"].each do |person| %>
      <p><%= link_to person["title"], film_specific_path(url: person["url"])%></p>
    <% end %>
    <p>Starships:</p>
    <% @person["starships"].each do |person| %>
      <p><%= link_to person["name"], starship_specific_path(url: person["url"])%></p>
    <% end %>
  </tbody>
</table>

<p></p>

<%= link_to 'FILMS', film_path, :class => "btn btn-default" %>
<%= link_to 'PEOPLE', people_path, :class => "btn btn-default" %>
<%= link_to 'PLANETS', planet_path, :class => "btn btn-default" %>
<%= link_to 'STARSHIPS', starship_path, :class => "btn btn-default" %>