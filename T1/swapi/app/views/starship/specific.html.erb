<table>  
  <tbody>
    <p>Name: <%= @starship["name"] %></p>
    <p>Model: <%= @starship["model"] %></p>
    <p>Manufacturer: <%= @starship["manufacturer"] %></p>
    <p>Cost in credits: <%= @starship["cost_in_credits"] %></p>
    <p>Length: <%= @starship["length"] %></p>
    <p>Max atmosphering speed: <%= @starship["max_atmosphering_speed"] %></p>
    <p>Crew: <%= @starship["crew"] %></p>
    <p>Passengers: <%= @starship["passengers"] %></p>
    <p>Cargo capacity: <%= @starship["cargo_capacity"] %></p>
    <p>Consumables: <%= @starship["consumables"] %></p>
    <p>Hyperdrive rating<%= @starship["hyperdrive_rating"] %></p>
    <p>MGLT: <%= @starship["MGLT"] %></p>
    <p>Starship class:<%= @starship["starship_class"] %></p>
    <p>Pilots:</p>
    <% @starship["pilots"].each do |person| %>
      <li><%= link_to person["name"], people_specific_path(url: person["url"])%></li>
    <% end %>
    <p>Films:</p>
    <% @starship["films"].each do |person| %>
      <li><%= link_to person["title"], film_specific_path(url: person["url"])%></li>
    <% end %>
  </tbody>
</table>

<p></p>

<%= link_to 'FILMS', film_path, :class => "btn btn-default" %>
<%= link_to 'PEOPLE', people_path, :class => "btn btn-default" %>
<%= link_to 'PLANETS', planet_path, :class => "btn btn-default" %>
<%= link_to 'STARSHIPS', starship_path, :class => "btn btn-default" %>